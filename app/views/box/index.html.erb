<div class="container">
  <%= render "layouts/header" %>
    <div class="row g-mt-50">
      <div class="col-lg-12">
        <h1 class="product-name"><strong><%= "장바구니" %></strong></h1><hr>
      </div>
    </div>

    <div class="row">
      <% @boxes.each do |box| %>
      <% meat = box.meat %>
      <div class="col-md-4 gogi-item" onClick="location.href='/meats/<%= meat.id %>'" style="cursor: pointer;">
        <img class="img-responsive" src='<%= asset_path "cow#{meat.id}.jpg" %>' alt="">
        <div class="item-information">
          <h3 class="product-name g-ml-10"><b><%= meat.title %></b></h3>
          <h4 class="g-mr-10" style="text-align:right"><i class="fa fa-krw" aria-hidden="true"></i><%= meat.price %></h3>
        </div>
      </div>
      <% end %>
    </div>

    <div class="g-mb-20 col-md-6">
      <%= link_to '~~하기', '/', class: "btn-u btn-devise g-mb-20" %>
    </div>
    <div class="g-mb-20 col-md-6">
      <!-- submit_to -->
      <%= link_to '주문하기', '/order', class: "btn-u btn-devise g-mb-20" %>
    </div>
  <br>
  <%= render "layouts/footer" %>
</div>
