<p id="notice"><%= notice %></p>

<h1>Listing Meats</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>User</th>
      <th>Title</th>
      <th>Maker</th>
      <th>Origin</th>
      <th>Weight</th>
      <th>Life</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meats.each do |meat| %>
      <tr>
        <td><%= meat.category %></td>
        <td><%= meat.user %></td>
        <td><%= meat.title %></td>
        <td><%= meat.maker %></td>
        <td><%= meat.origin %></td>
        <td><%= meat.weight %></td>
        <td><%= meat.life %></td>
        <td><%= meat.price %></td>
        <td><%= link_to 'Show', meat %></td>
        <td><%= link_to 'Edit', edit_meat_path(meat) %></td>
        <td><%= link_to 'Destroy', meat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

